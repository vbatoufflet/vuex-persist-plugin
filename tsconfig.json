{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "strict": true,
    "target": "ESNext",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "types"
  ]
}
